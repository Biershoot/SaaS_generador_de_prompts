# =============================================================================
# Prompt Generator SaaS - Environment Variables Example
# =============================================================================
# Copy this file to .env and fill in your actual values
# =============================================================================

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATASOURCE_URL=jdbc:mysql://localhost:3306/prompt_saas?useSSL=false&serverTimezone=UTC&allowPublicKeyRetrieval=true
DATASOURCE_USERNAME=prompt_user
DATASOURCE_PASSWORD=prompt_pass

# =============================================================================
# JWT CONFIGURATION
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=18000
JWT_ISSUER=prompt-generator-saas

# =============================================================================
# STRIPE CONFIGURATION
# =============================================================================
# Test keys (replace with live keys for production)
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxxx

# =============================================================================
# AI PROVIDER API KEYS
# =============================================================================
# OpenAI Configuration
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxx
OPENAI_MODEL=gpt-4o-mini

# Claude Configuration
CLAUDE_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxxxx
CLAUDE_MODEL=claude-3-opus-20240229

# Stable Diffusion Configuration
STABLE_DIFFUSION_API_URL=https://api.stability.ai
STABLE_DIFFUSION_API_KEY=xxxxxxxxxxxxxxxxxxxxxx
STABLE_DIFFUSION_MODEL=stable-diffusion-xl-1024-v1-0

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Logging Configuration
LOGGING_LEVEL_COM_ALEJANDRO=INFO
LOGGING_LEVEL_ORG_SPRINGFRAMEWORK=WARN
LOGGING_LEVEL_COM_STRIPE=WARN

# =============================================================================
# AWS CONFIGURATION (for production deployment)
# =============================================================================
# AWS_ACCESS_KEY_ID=AKIAXXXXXXXXXXXXXXXX
# AWS_SECRET_ACCESS_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# AWS_REGION=us-east-1
# AWS_ACCOUNT_ID=123456789012

# =============================================================================
# KUBERNETES CONFIGURATION (for K8s deployment)
# =============================================================================
# KUBECONFIG=<base64-encoded-kubeconfig>

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
# Prometheus endpoint (enabled by default)
# MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,metrics,prometheus

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Server configuration
SERVER_PORT=8080

# SSL Configuration (for production)
# SERVER_SSL_KEY_STORE=classpath:keystore.p12
# SERVER_SSL_KEY_STORE_PASSWORD=your-keystore-password
# SERVER_SSL_KEY_STORE_TYPE=PKCS12

# =============================================================================
# CACHE CONFIGURATION (optional)
# =============================================================================
# Redis Configuration (if using Redis for caching)
# SPRING_REDIS_HOST=localhost
# SPRING_REDIS_PORT=6379
# SPRING_REDIS_PASSWORD=
# SPRING_REDIS_DATABASE=0

# =============================================================================
# EMAIL CONFIGURATION (optional)
# =============================================================================
# SMTP Configuration (if implementing email notifications)
# SPRING_MAIL_HOST=smtp.gmail.com
# SPRING_MAIL_PORT=587
# SPRING_MAIL_USERNAME=your-email@gmail.com
# SPRING_MAIL_PASSWORD=your-app-password
# SPRING_MAIL_PROPERTIES_MAIL_SMTP_AUTH=true
# SPRING_MAIL_PROPERTIES_MAIL_SMTP_STARTTLS_ENABLE=true
